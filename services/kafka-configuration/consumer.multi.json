{
  "bootstrapServers": "localhost:9092",
  "consumers": [
    {
      "name": "dashboard-readings",
      "groupId": "cps-consumer-webapp",
      "topics": ["TemperatureReadings", "CO2"],
      "headers": {
        "sensor_id": "living-room"
      },
      "offset": {
        "autoCommit": true,
        "fromBeginning": false,
        "commitEachMessage": false,
        "seekByTimestampMs": null
      },
      "description": "Consumes readings for dashboard; normal streaming consumption."
    },
    {
      "name": "window-events",
      "groupId": "cps-consumer-window",
      "topics": ["Window"],
      "headers": {
        "device": "window-sensor-01",
        "location": "living-room"
      },
      "offset": {
        "autoCommit": false,
        "fromBeginning": true,
        "commitEachMessage": true,
        "seekByTimestampMs": null
      },
      "description": "Consumes Window events; start from beginning and manually commit to allow replay control."
    }
  ]
}
